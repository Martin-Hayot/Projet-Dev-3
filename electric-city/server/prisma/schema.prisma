// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  userId    Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  fullName  String   @db.VarChar(255)
  email     String   @unique
  isAdmin   Boolean  @default(false)
  admins    admins?
  orders    orders?
  agenda    agenda?
}

model admins {
  admin   users  @relation(fields: [adminId], references: [userId])
  adminId Int    @unique
  order   orders @relation(fields: [orderId], references: [orderId])
  orderId Int    @unique
}

model orders {
  orderId       Int       @id @default(autoincrement())
  user          users     @relation(fields: [userId], references: [userId])
  userId        Int       @unique
  feedback      String    @db.VarChar(255)
  price         Int       @default(0)
  numbOfOrders  Int       @default(1)
  mastering     mastering @relation(fields: [masteringType], references: [masteringType])
  masteringType String
  admins        admins?
}

model mastering {
  masteringType String   @id @db.VarChar(255)
  price         Int      @default(0)
  orders        orders[]
}

model agenda {
  meetingId Int      @id @default(autoincrement())
  user      users    @relation(fields: [userId], references: [userId])
  userId    Int      @unique
  createdAt DateTime @default(now())
}